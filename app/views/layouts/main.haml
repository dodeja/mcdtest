!!! Strict
%html
  %head
    %title= [@title, "McD Locator"].compact.join(" | ")
    = stylesheet_link_tag 'reset', 'main'
    = javascript_include_tag 'jquery', 'main'
    = yield_content :include
  %body
    .container
      #header{:class => ["span-22", "prepend-1"]}
        %h1 McD Location Manager
        %ul.menu
          %li= link_to 'All Locations', url_for(:manage, :index)
          %li= link_to 'New Location', url_for(:manage, :new_location)
          %li= link_to 'API Info', url_for(:manage, :api)
      #content{:class => ["span-22", "prepend-1", "append-1"]}=  yield
      #footer{:class => ["span-22", "prepend-1"]}
